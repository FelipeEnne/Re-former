<%
=begin %>
<%= form_tag("/users", method: "POST") do %>
  <p>
  <%= label_tag(:username, "Username") %><br>
  <%= text_field_tag(:username) %>
  </p>
  <p>
  <%= label_tag(:email, "Email") %><br>
  <%= email_field_tag(:email) %>
  </p>
  <p>
  <%= label_tag(:password, "Password") %><br>
  <%= password_field_tag(:password) %>
  </p>
  <%= submit_tag("Create Account") %>
<% end %>
<%
=end %>

<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
  <p>The following <%= pluralize(@user.errors.count, 'error')%> prevented your form from being created!</p>
    <% @user.errors.full_messages.each do |error| %>
      <p>
        <%= error %>
      </p>
    <% end %>
  <% end %>

  <p>
    <%= f.label :username, "Enter Username" %><br>
    <%= f.text_field :username, placeholder: "Enter username here"%>
  </p>
  <p>
    <%= f.label :email, "Enter Email" %><br>
    <%= f.email_field :email, placeholder: "example@eample.com"%>
  </p>
  <p>
    <%= f.label :password, "Enter Password" %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Create Account" %>
  </p>
<% end %>
